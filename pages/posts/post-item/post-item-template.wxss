 .post-author-date{
    margin-top: 10rpx;
    margin-bottom: 20rpx;
    margin-left: 10rpx;
  }
  .post-author{
    width: 60rpx;
    height: 60rpx;
    vertical-align: middle;
  }
  .post-date{
    margin-left: 20rpx;
    vertical-align: middle;
    margin-bottom: 5px;
    font-size: 26rpx;
  }
  /* 垂直方向用px，水平方向用rpx */
  .post-title{
    font-size: 34rpx;
    font-weight: 600;
    color:#333;
    margin-bottom: 10px;
    margin-left: 10px;
  }
  .post-image{
    margin-left: 16px;
    width: 100%;
    height: 540rpx;
    margin: 0 auto;
    margin-bottom: 15px;
  }
  .post-content{
    color:#666;
    font-size: 28rpx;
    margin-bottom: 20rpx;
    margin-left: 20rpx;
    letter-spacing: 2rpx;
    line-height: 40rpx;
  }
  .post-like{
    font-size: 13px;
    flex-direction: row;
    line-height: 16px;
    margin-left: 10px;
  }
  .post-like-image{
    width:25rpx;
    height: 25rpx;
    margin-right: 8px;
    vertical-align: middle;
  }
  .post-like-font{
    vertical-align: middle;
    margin-right: 20px;
  }